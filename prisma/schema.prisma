generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
    url    = env("PRISMA_DATABASE_URL")  // ← URL Accelerate
  directUrl = env("DATABASE_URL")         // ← URL directe PostgreSQL
}


model EventoEvent {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  city String
  location String
  date DateTime
  description String
  imageUrl String
  organizerName String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}